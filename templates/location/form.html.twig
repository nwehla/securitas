{% extends 'base.html.twig '%}

{% block body %}
<div class="container">
                <div class="form-group">
               <h1>Ajout d'une location !</h1>
               </div>
               
    <div class="section">
        <div class="row">
            <div class="col ml2 sl2">
                
                {{form_start(form)}}
                <div class="form-group">
                  <label for="date">date</label>
                  {{form_widget(form.date)}}
                </div>
                <div class="form-group">
                  <label for="titre">titre</label>
                  {{form_widget(form.titre)}}
                </div>
                <div class="form-group">
                  <label for="categories">categories</label>
                  {{form_widget(form.categories)}}  
                </div>  
                              
                <div class="form-group">
                  <label for="images">images</label>
                  {{form_widget(form.images)}}  
                </div>  
                              
                <div class="form-group">
                  <label for="description">description</label>
                  {{form_widget(form.description)}}  
                </div>  
                              
                <div class="form-group">
                  <label for="valeur">valeur</label>
                  {{form_widget(form.valeur)}}  
                </div>  
                      
                <div class="form-group">
                  <label for="adresse">adresse</label>
                  {{form_widget(form.adresse)}}  
                </div>  
                <div class="form-group">
                  <label for="accessibilité">accessibilité</label>
                  {{form_widget(form.accessibility)}}  
                </div>  
                <div class="form-group">
                  <label for="a la une ">a la une !</label>
                  {{form_widget(form.alaune)}}  
                </div>  
                      
                <div class="form-group">
                  <label for="status">status</label>
                  {{form_widget(form.status)}}  
                </div>  
                      
                 
                      

                
                <button class="button btn btn-success btn-lg center-block" id="submitBtn">cliquez ici !</button>

                {{form_end(form)}}
            </div>
        </div>

    </div>
</div>

{% endblock body %}

