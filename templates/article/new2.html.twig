                {{ form_label(formArticle.date) }}
                
            
                <input  class="form-control" {{ form_widget(formArticle.date) }}
              </div>
              <div class="col-md-6">
                {{ form_label(formArticle.images) }}
    
                <input  class="form-control" {{ form_widget(formArticle.images) }}
