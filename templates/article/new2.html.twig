<div>
    <form>
        <div class="form-group">
            
            {{ form_start(formArticle)}}

            <div class="row">
              <div class="col-md-6">
                {{ form_label(formArticle.titre) }}
                 <input class="form-control"{{form_widget(formArticle.titre) }}>
              </div>
              <div class="col-md-6">
                {{ form_label(formArticle.resume) }}
                <input class="form-control"{{ form_widget(formArticle.resume) }}
              </div>
            </div>
        </div>
        <div class="form-group">
