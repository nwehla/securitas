{% block body %}
<div class="row bg-success light border center-block">
    <h1><a href="{{path("article")}}">Retour aux Articles !</a></h1>
  </div>
  
    <h1>Articles </h1>
<table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Contenu</th>
                <th>images</th>
                <th>resume</th>
                <th>date</th>
