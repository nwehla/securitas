{% extends 'base.html.twig' %}

{% block title %}New Articles{% endblock %}
{% block montitre %}Informations sur {{ articles.titre }} {% endblock %}


{% block body %}
<div class="row bg-success light border center-block">
    <h1><a href="{{path("article")}}">Retour aux Articles !</a></h1>
  </div>
  
<table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Contenu</th>
                <th>images</th>
                <th>resume</th>
                <th>date</th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <td>{{ articles.id }}</td>
                <td>{{ articles.titre }}</td>
                <td>{{ articles.Contenu }}</td>
                <td>{{ articles.images }}</td>
                <td>{{ articles.resume }}</td>
                <td>{{ articles.date|date("d/m/Y") }}</td>
            </tr>

        </tbody>
    </table>
{% endblock %}
