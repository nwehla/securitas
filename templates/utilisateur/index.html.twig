{% extends 'base.html.twig' %}

{% block title %}Les uts{% endblock %}

{% block body %}


    <div class="container">
      <div class="row bg-success light-border">
        <h1><a href="{{path('form_uti')}}">Ajouter un utitlisateur</a></h1>
    </div>
<div>
  <table class="table">
    <tr>
      <th scope="col">id</th>
      <th scope="col">nom</th>
      <th scope="col">prenom</th>  
      <th scope="col">Adresse</th>  
      <th scope="col">motdepasse</th>
